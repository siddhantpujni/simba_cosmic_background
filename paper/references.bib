@article{wetzelGalaxyEvolutionGroups2012,
  title = {Galaxy Evolution in Groups and Clusters: Star Formation Rates, Red Sequence Fractions and the Persistent Bimodality: {{Galaxy}} Evolution in Groups and Clusters},
