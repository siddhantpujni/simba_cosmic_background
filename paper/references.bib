@article{rodriguezmonteroMergersStarburstsQuenching2019,
  title = {Mergers, Starbursts, and Quenching in the Simba Simulation},
  author = {Rodr{\'i}guez~Montero, Francisco and Dav{\'e}, Romeel and Wild, Vivienne and {Angl{\'e}s-Alc{\'a}zar}, Daniel and Narayanan, Desika},
